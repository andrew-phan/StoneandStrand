<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <attribute name="class" value="forgot"/>
    </body>
    <referenceContainer name="page.top">
        <referenceBlock name="breadcrumbs" remove="true" />
    </referenceContainer>
    
    <referenceBlock name="account_header" remove="true" />
    <referenceBlock name="ss.contactus.nutshell" remove="true" />
    
    <referenceContainer name="columns.top">
        <referenceBlock name="page.main.title" remove="true" />
    </referenceContainer>
    
    <referenceContainer name="content">
        <referenceBlock name="forgotPassword" template="Ss_Customer::form/forgotpassword.phtml"/>
    </referenceContainer>
</page>
